<form action="/signup" method="POST">
    <div class="mb-3" style="max-width: 320px;">
        <label for="nickname" class="form-label">Nickname</label>
        <input name="nickname" type="text" class="form-control" id="nickname" aria-describedby="nickname"
            aria-label="default input " placeholder="What shall we call you?" required>
    </div class="valid-feedback">
    <div class="mb-3" style="max-width: 320px;">
        <label for="InputEmail" class="form-label">Email</label>
        <input name="email" type="text" class="form-control" id="InputEmail1" aria-describedby="emailHelp"
            placeholder="Please enter your email" required>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div class="valid-feedback">
    <div class="mb-3" style="max-width: 320px;">
        <label for="InputPassword" class="form-label" placeholder="Enter a Password">Password</label>
        <input name="password" type="password" class="form-control" id="InputPassword">
    </div class="valid-feedback">
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="Check">
        <label class="form-check-label" for="Check1">Agree to Terms and Condtions.</label>
    </div class="valid-feedback">
    <button type="submit" class="btn btn-primary">Signup</button>
    <div class="form-text">Have an account already? <a href="/signin">Join the party.</a></div>
    </form>
    <br>
    <br>
   {{#if error}}
<div class="alert alert-danger alert-dismissible fade show" style="max-width: 320px;" role="alert">
    {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{/if}}
</div>