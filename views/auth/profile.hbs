<h2><p>Hello {{result.nickname}}, welcome to Mojito!</p></h2>

<br>
<br>

{{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" style="max-width: 320px;" role="alert">
    {{error}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    {{else}}
    <h4>Favorite Drinks</h4>

    <div class="container">
      <div class="row">
          
    {{#each result.favDrinks}}
    {{> minicard this}}
    {{/each}}
    </div>  
    </div>
{{/if}}