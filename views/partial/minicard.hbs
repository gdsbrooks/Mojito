<div class="col-md-3">
  <div class="card m-4">
    <div class="card-header">
      <h4 class="card-title text-center">{{this.name}}</h4>
    </div>
    <img src="{{this.imageUrl}}" class="card-img-bottom" alt="{{this.name}}" />
    <div class="card-footer">
      <div class="float-start">
        <span class="badge rounded-pill bg-primary">{{this.source}}</span>
      </div>
      <div class="float-end">
        <span class="badge bg-secondary">{{this.ingredients.0.name}}</span>
      </div>

    </div>
  </div>
</div>