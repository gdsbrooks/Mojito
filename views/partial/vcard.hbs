<div class="col-4">
<div class="card" style="width: 18rem;">
    
        <img src="{{this.imageUrl}}" class="card-img-top" alt="{{this.name}}"> 
          {{#if this.favDrinks}}
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-bookmark-heart-fill" viewBox="0 0 16 16">
  <path d="M2 15.5a.5.5 0 0 0 .74.439L8 13.069l5.26 2.87A.5.5 0 0 0 14 15.5V2a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v13.5zM8 4.41c1.387-1.425 4.854 1.07 0 4.277C3.146 5.48 6.613 2.986 8 4.412z"/>
</svg>
        {{else}}<div class="card-img-overlay"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-bookmark-heart" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M8 4.41c1.387-1.425 4.854 1.07 0 4.277C3.146 5.48 6.613 2.986 8 4.412z"/>
  <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5V2zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1H4z"/>
</svg></div> {{/if}}
 
        <div class="card-body">
            <h5 class="card-title text-decoration-none">{{this.name}}</h5> 
            
            Ingredients:
            <ul>
                {{#each this.ingredients}}
                <li>{{amount}}{{unit}} {{name}}</li>
                {{/each}}
            </ul>
            <p class="card-text">Method: <br> {{this.method}}</p>
           {{#if this.garnish}} <p class="card-text">Garnish: <br> {{this.garnish}}</p> {{/if}}
           {{#if this.note}} <p class="card-text">Note: <br> {{this.note}}</p> {{/if}}

            <a href="#" class="btn btn-dark">Edit</a>
            <span class="badge rounded-pill bg-primary">{{this.source}}</span>
            <br>
            <span class="badge bg-secondary">{{this.ingredients.0.name}}</span>
    
            
        </div>
    </div>
    </div>
